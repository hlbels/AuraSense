<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <corners android:radius="16dp" />

    <!-- amber 200 → amber 500 → orange 500 -->
    <gradient
        android:type="linear"
        android:angle="0"
        android:startColor="#FFE082"
        android:centerColor="#FFC107"
        android:endColor="#FF9800" />

    <padding
        android:left="12dp"
        android:top="12dp"
        android:right="12dp"
        android:bottom="12dp" />

    <!-- orange 600 stroke -->
    <stroke
        android:width="2dp"
        android:color="#FB8C00" />
</shape>
