<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:gravity="center">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="We noticed signs of rising discomfort."
        android:textAlignment="center"
        android:textSize="22sp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp" />

    <!-- NEW TextView for dynamic stress level -->
    <TextView
        android:id="@+id/stressLevelText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Stress Level: â€”"
        android:textSize="18sp"
        android:textColor="#444444"
        android:layout_marginBottom="24dp" />


    <Button
        android:id="@+id/startBreathingButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Start Breathing Exercise" />

    <Button
        android:id="@+id/dismissButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Dismiss" />

    <ToggleButton
        android:id="@+id/reminderToggle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:textOn="Remind me in 5 min"
        android:textOff="Remind me in 5 min" />
</LinearLayout>
