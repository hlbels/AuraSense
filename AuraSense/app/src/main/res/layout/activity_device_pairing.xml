<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="vertical" android:padding="16dp" android:gravity="center">

    <TextView
        android:id="@+id/statusText"
        android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:text="Scanning for AuraSense-001..."
        android:textSize="18sp" />

    <Button
        android:id="@+id/pairButton"
        android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:layout_marginTop="32dp" android:text="Pair" />

    <TextView
        android:id="@+id/heartRateText"
        android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:layout_marginTop="32dp" android:textSize="24sp"
        android:textStyle="bold" android:visibility="gone" />
</LinearLayout>